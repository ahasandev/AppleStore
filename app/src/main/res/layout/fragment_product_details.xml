<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ProductDetailsFragment">

    <ImageView
        android:id="@+id/productimg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/pdtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productimg"
        android:maxLines="2"
        android:text="I phone X"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginVertical="8dp"/>
    <TextView
        android:id="@+id/pdprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pdtitle"
        android:maxLines="2"
        android:text="I phone X"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginVertical="8dp"/>
    <TextView
        android:id="@+id/pddiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pdprice"
        android:maxLines="2"
        android:text="I phone X"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginVertical="8dp"/>



    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>